package org.example.interview;

import java.util.HashMap;
import java.util.Map;
import java.util.Random;
import java.util.Scanner;

public class Interview {
	public static boolean[] checked;
	public static Map<Integer, String> experience;

	public static void main(String[] args) throws Exception {
		setExperience();
		printExperience();

		System.out.println();
		System.out.println();

		// reset();
	}

	private static void printExperience() throws Exception {
		Random random = new Random();
		int n = random.nextInt(125) + 1;

		if (!checked[n]) {
			System.out.println("***************************************");
			System.out.println();
			System.out.println(experience.get(n));
			System.out.println();
			System.out.println("***************************************");
			checked[n] = true;
			System.out.println();
		}

		timer();

		Scanner sc = new Scanner(System.in);
		if (sc.nextInt() != 0) {
			printExperience();
		}

		sc.close();
	}

	private static void timer() throws Exception {
		int total = 4 * 60 + 30;

		while (total >= 0) {
			int minutes = total / 60;
			int seconds = total % 60;

			System.out.print("\r"+ String.format("%d : %02d", minutes, seconds));
			Thread.sleep(5000);
			total -= 5;
		}

		System.out.println(); // 줄바꿈
	}

	private static void reset() {
		checked = new boolean[125];
	}

